<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/user_info_graph"
    app:startDestination="@id/userInfoFragment">

    <include app:graph="@navigation/diseases" />
    <include app:graph="@navigation/basic_indicators" />
    <include app:graph="@navigation/laboratory_research" />
    <include app:graph="@navigation/lifestyle" />

    <fragment
        android:id="@+id/userInfoFragment"
        android:name="is.ulstu.cardioanalyst.ui.user_info.UserInfoFragment"
        android:label="fragment_user_info"
        tools:layout="@layout/fragment_user_info" >
        <action
            android:id="@+id/action_userInfoFragment_to_navigation_diseases"
            app:destination="@id/navigation_diseases" />
        <action
            android:id="@+id/action_userInfoFragment_to_navigation_basic_indicators"
            app:destination="@id/navigation_basic_indicators" />
        <action
            android:id="@+id/action_userInfoFragment_to_navigation_laboratory_research"
            app:destination="@id/navigation_laboratory_research" />
        <action
            android:id="@+id/action_userInfoFragment_to_navigation_lifestyle"
            app:destination="@id/navigation_lifestyle" />
    </fragment>

</navigation>