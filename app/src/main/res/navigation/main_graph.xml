<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph"
    app:startDestination="@+id/navigation_authorization">

    <fragment
        android:id="@+id/navigation_authorization"
        android:name="is.ulstu.cardioanalyst.ui.authorization.AuthorizationFragment"
        android:label="AuthorizationFragment"
        tools:layout="@layout/fragment_authorization">
        <action
            android:id="@+id/action_authorizationFragment_to_registrationFragment"
            app:destination="@id/navigation_registration" />
        <action
            android:id="@+id/action_authorizationFragment_to_tabsFragment"
            app:destination="@id/navigation_tabs" />
    </fragment>

    <fragment
        android:id="@+id/navigation_registration"
        android:name="is.ulstu.cardioanalyst.ui.registration.RegistrationFragment"
        android:label="RegistrationFragment"
        tools:layout="@layout/fragment_registration">
        <action
            android:id="@+id/action_navigation_registration_to_navigation_tabs"
            app:destination="@id/navigation_tabs" />
    </fragment>

    <fragment
        android:id="@+id/navigation_tabs"
        android:name="is.ulstu.cardioanalyst.ui.TabsFragment"
        android:label="fragment_tabs"
        tools:layout="@layout/fragment_tabs" />

</navigation>