<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CardioAnalyst" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/enter_color</item>
        <item name="colorPrimaryVariant">@color/background_night</item>
        <item name="colorOnPrimary">@color/yellow_color</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/enter_color</item>
        <item name="colorSecondaryVariant">@color/navigation_title_night</item>
        <item name="colorOnSecondary">@color/active_color</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/background_night</item>
        <item name="android:textColor">@color/text_color_night</item>
        <item name="colorSurface">@color/navigation_bar_night</item>
    </style>
</resources>