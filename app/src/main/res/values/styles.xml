<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.App.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.TabLayout</item>
    </style>

    <style name="textEdit">
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:textColor">@color/enter_color</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:background">@drawable/round_background</item>
    </style>

    <style name="ThemeOverlay.App.TabLayout" parent="">
        <item name="colorPrimary">@color/active_color</item>
        <item name="colorSurface">@color/black</item>
        <item name="colorOnSurface">@color/inactive_color</item>
    </style>

    <style name="textViewHint">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:textColor">@color/inactive_color</item>
        <item name="android:textSize">@dimen/text_large</item>
    </style>
</resources>