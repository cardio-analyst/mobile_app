<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.App.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.TabLayout</item>
    </style>

    <style name="button_simple" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">120dp</item>
        <item name="android:textColor">@color/enter_color</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:insetTop">8dp</item>
        <item name="android:insetBottom">8dp</item>
        <item name="shapeAppearanceOverlay">@style/MyShapeAppearance</item>
        <item name="materialThemeOverlay">@style/SimpleButtonThemeOverlay</item>
    </style>

    <style name="button_positive" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">150dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="shapeAppearanceOverlay">@style/MyShapeAppearance</item>
        <item name="materialThemeOverlay">@style/PositiveButtonThemeOverlay</item>
    </style>

    <style name="SimpleButtonThemeOverlay">
        <item name="colorPrimary">@color/white</item>
    </style>

    <style name="PositiveButtonThemeOverlay">
        <item name="colorPrimary">@color/background_color</item>
    </style>

    <style name="button_negative" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">150dp</item>
        <item name="android:textColor">@color/enter_color</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/background_color</item>
        <item name="shapeAppearanceOverlay">@style/MyShapeAppearance</item>
    </style>

    <style name="MyShapeAppearance" parent="">
        <item name="cornerSize">15dp</item>
    </style>

    <style name="textEdit">
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:minHeight">32dp</item>
        <item name="android:textColor">@color/enter_color</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:background">@drawable/round_background</item>
    </style>

    <style name="ThemeOverlay.App.TabLayout" parent="">
        <item name="colorPrimary">@color/active_color</item>
        <item name="colorSurface">@color/black</item>
        <item name="colorOnSurface">@color/inactive_color</item>
    </style>

    <style name="textViewHint">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:textColor">@color/inactive_color</item>
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

    <style name="textViewHintProfile">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:textColor">@color/inactive_color</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:enabled">false</item>
    </style>

    <style name="textViewHintLaboratoryResearch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">68dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:textColor">@color/inactive_color</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:enabled">false</item>
    </style>

    <style name="checkBoxStyle" parent="Base.Theme.AppCompat">
        <item name="colorAccent">@color/background_color</item>
        <item name="android:textColorSecondary">@color/background_color</item>
    </style>

    <style name="checkBoxStyleWhite" parent="Base.Theme.AppCompat">
        <item name="colorAccent">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

</resources>